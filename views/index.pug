extends layout

block content
  div(class="tc bg-white bb b--black-10 pa5")
    h1(class="f2 f1-ns fw6 mid-gray")
      a(href="/") browserl.ist
    p(class="ma0 mv4") A page to display compatible browsers from a browserslist query.
    form(method="get" url="/" class="cf my4 f5 f4-ns")
      div(class="fl w-100 w-80-ns mb2 mb0-ns pr2-ns")
        input(class="pa2 ba b--black-30 code br1 border-box w-100 lh-title" name="q" value= query)
      div(class="fl w-100 w-20-ns")
        button(type=submit class="pa2 ba b--black-30 br1 db w-100 lh-title border-box pointer") Find
  div(class="dt-ns w-100")
    each browsers, platform in compatible
      div(class="dtc-ns pa3 w-50-ns border-box")
        h2(class="f4 f3-ns ma0 mt4 mb4 tc ttc") #{platform} browsers
        ul(class="ma0")
          each browser in browsers
            li(class="ma0 mb3 lh-copy")
              img(src=browser.logo class="v-mid mr2" alt=browser.name height="34" width="34")
              span(class="mr1 v-mid") #{browser.name}
              span(class="v-mid") #{browser.version}
